{
  "name": "create-monorepo",
  "version": "1.0.0",
  "description": "A CLI tool for quickly initializing and managing containerized monorepo development environments",
  "main": "dist/index.js",
  "bin": {
    "create-monorepo": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "clean": "rimraf dist"
  },
  "keywords": [
    "monorepo",
    "cli",
    "scaffold",
    "boilerplate",
    "typescript",
    "docker",
    "containerization",
    "development-environment"
  ],
  "author": "create-monorepo <your-email@example.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fs-extra": "^11.1.1",
    "semver": "^7.5.4",
    "validate-npm-package-name": "^5.0.0",
    "yaml": "^2.3.4",
    "execa": "^8.0.1",
    "listr2": "^7.0.2",
    "enquirer": "^2.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/fs-extra": "^11.0.2",
    "@types/semver": "^7.5.4",
    "@types/inquirer": "^9.0.6",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "@types/validate-npm-package-name": "^4.0.0"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/create-monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/create-monorepo/issues"
  },
  "homepage": "https://github.com/your-username/create-monorepo#readme"
}